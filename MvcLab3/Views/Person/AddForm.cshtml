@model Person
<h1>This Page for Adding Person To The List</h1>
<form asp-controller="Person" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input class="form-control" type="text" asp-for="Id">
    </div>
    <hr>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" type="text" asp-for="Name">
    </div>
    <hr>
    <div class="form-group">
        <label asp-for="Age">Age</label>
        <input class="form-control" type="text" asp-for="Age">
    </div>
    <hr>
    <div class="form-group">
        <label asp-for="Image">Person Photo</label>
        <input class="form-control" type="text" asp-for="Image">
    </div>
    <hr>
    <button class="btn btn-primary">Add</button>

</form>