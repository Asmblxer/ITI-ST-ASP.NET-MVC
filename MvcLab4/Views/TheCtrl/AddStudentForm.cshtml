@model Student
@{
    var CoursesList = ViewBag.Courses; 
}
<h1>This Page for Adding Student To The Database</h1>
<form asp-controller="TheCtrl" asp-action="AddStudent" method="post">
    <div class="form-group">
        <label asp-for="Name">Student Name</label>
        <input class="form-control" type="text" asp-for="Name">
    </div>
    <hr>
    <div class="form-group">
        <label asp-for="Age">Student Age</label>
        <input class="form-control" type="text" asp-for="Age">
    </div>
    <hr>
    <div class="form-group">
        <label asp-for="Email">Student Email</label>
        <input class="form-control" type="text" asp-for="Email">
    </div>
    <hr>
   <div class="form-group">
        <label asp-for="CourseId">Course</label>
        <select class="form-select" asp-for="CourseId" asp-items="CoursesList"></select>
    </div>
    <hr>
    <button class="btn btn-primary">Add</button>

</form>
<hr>
<a type="button" class="btn btn-primary" asp-action="ShowStudents">Return</a>